            </options>
			<options value="y">
                <title xml:lang="ko">예 출력합니다</title>
                <value>y</value>
            </options>
        </var>
		<var name="banner_ttext4" type="text">
			<title xml:lang="ko">배너 텍스트 제목 4</title>
