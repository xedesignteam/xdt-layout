<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">XDT Style B</title>
    <description xml:lang="ko">Style A 의 후속 버전입니다. 많은 기능이 추가될 예정입니다 !</description>
    <version>1.2.4</version>
    <date>2014-03-28</date>

    <author email_address="support@xdt.kr" link="http://xdt.kr">
        <name xml:lang="ko">범진혁</name>
		<name xml:lang="en">Beom Jinhyeok</name>
    </author>
    <menus>
	    <menu name="top_menu" maxdepth="1" default="true">
            <title xml:lang="ko">최상단 메뉴</title>
			<title xml:lang="en">top menu</title>
        </menu>
		<menu name="main_menu" maxdepth="1" default="true">
            <title xml:lang="ko">메뉴</title>
			<title xml:lang="en">menu</title>
        </menu>
		<menu name="footer_menu" maxdepth="1" default="true">
            <title xml:lang="ko">하단 메뉴</title>
			<title xml:lang="en">footer menu</title>
        </menu>
		<menu name="family_menu" maxdepth="1">
            <title xml:lang="ko">패밀리 사이트</title>
        </menu>
    </menus>
	<extra_vars>
	    <group>
		<title xml:lang="ko">레이아웃 설정</title>
	    <var name="body_style" type="select">
			<title xml:lang="ko">본문 스타일</title>
			<description xml:lang="ko">본문 스타일을 선택하세요.</description>
			<options value="main">
				<title xml:lang="ko">메인페이지</title>
				<value>home</value>
				</options>	
			<options value="sub">
				<title xml:lang="ko">서브페이지</title>
				<value>sub</value>
			</options>
		</var>
		<var name="page_style" type="select">
            <title xml:lang="ko">본문 스타일 상세 설정</title>
            <description xml:lang="ko">본문 스타일을 선택해 주세요.</description>
            <options value="a">
                <title xml:lang="ko">테두리 없음</title>
                <value>a</value>
            </options>
			<options value="b">
                <title xml:lang="ko">테두리 없음/상하좌우 10px 여백</title>
                <value>b</value>
            </options>
			<options value="c">
                <title xml:lang="ko">회색 테두리</title>
                <value>c</value>
            </options>
			<options value="d">
                <title xml:lang="ko">회색 테두리/상하좌우 10px 여백</title>
                <value>c</value>
            </options>
        </var>
		</group>
		<group>
		<title xml:lang="ko">커스텀 설정</title>
		<var name="menu_bar_color" type="select">
            <title xml:lang="ko">메뉴바 색상 커스텀</title>
            <description xml:lang="ko">메뉴바 색상 커스텀 사용유무를 선택해 주세요.</description>
			<options value="n">
                <title xml:lang="ko">사용하지 않습니다</title>
                <value>n</value>
            </options>
            <options value="y">
                <title xml:lang="ko">사용합니다.</title>
                <value>y</value>
            </options>
        </var>
		<var name="menu_bar_css" type="text">
			<title xml:lang="ko">메뉴바 색상</title>
			<description xml:lang="ko">메뉴바 색상을 변경합니다. #을 같이 입력하세요.(Ex. #CCC) 기본값 #404040</description>
		</var>
		<var name="menu_color" type="select">
            <title xml:lang="ko">메뉴 클릭 색상 커스텀</title>
            <description xml:lang="ko">메뉴 클릭 색상 커스텀 사용유무를 선택해 주세요.</description>
			<options value="n">
                <title xml:lang="ko">사용하지 않습니다</title>
                <value>n</value>
            </options>
            <options value="y">
                <title xml:lang="ko">사용합니다.</title>
                <value>y</value>
            </options>
        </var>
		<var name="menu_css" type="text">
			<title xml:lang="ko">메뉴 클릭 색상</title>
			<description xml:lang="ko">메뉴를 클릭하면 나타나는 색상을 변경합니다. #을 같이 입력하세요.(Ex. #CCC) 기본값 #98B85E</description>
		</var>
		<var name="hover_color" type="select">
            <title xml:lang="ko">메뉴 오버(호버) 색상 커스텀</title>
            <description xml:lang="ko">메뉴 오버(호버) 색상 커스텀 사용유무를 선택해 주세요.</description>
			<options value="n">
                <title xml:lang="ko">사용하지 않습니다</title>
                <value>n</value>
            </options>
            <options value="y">
                <title xml:lang="ko">사용합니다.</title>
                <value>y</value>
            </options>
        </var>
        <var name="hover_css" type="text">
			<title xml:lang="ko">메뉴 오버(호버) 색상</title>
			<description xml:lang="ko">메뉴를 오버(호버)하면 나타나는 색상을 변경합니다. #을 같이 입력하세요.(Ex. #CCC) 기본값 #85A252</description>
		</var>
		<var name="search_color" type="select">
            <title xml:lang="ko">검색폼 색상 커스텀</title>
            <description xml:lang="ko">검색폼 색상 커스텀 사용유무를 선택해 주세요.</description>
			<options value="n">
                <title xml:lang="ko">사용하지 않습니다</title>
                <value>n</value>
            </options>
            <options value="y">
                <title xml:lang="ko">사용합니다.</title>
                <value>y</value>
            </options>
        </var>
        <var name="search_css" type="text">
			<title xml:lang="ko">검색폼 색상</title>
			<description xml:lang="ko">검색폼 색상을 변경합니다. #을 같이 입력하세요.(Ex. #CCC) 기본값 #CCC</description>
		</var>
		<var name="sub_line_color" type="select">
            <title xml:lang="ko">서브 메뉴 라인 색상 커스텀</title>
            <description xml:lang="ko">서브 메뉴 라인 색상 커스텀 사용유무를 선택해 주세요.</description>
			<options value="n">
                <title xml:lang="ko">사용하지 않습니다</title>
                <value>n</value>
            </options>
            <options value="y">
                <title xml:lang="ko">사용합니다.</title>
                <value>y</value>
            </options>
        </var>
        <var name="sub_line_css" type="text">
			<title xml:lang="ko">서브 메뉴 라인 색상</title>
			<description xml:lang="ko">서브 메뉴 라인 색상을 변경합니다. #을 같이 입력하세요.(Ex. #CCC) 기본값 #000</description>
		</var>
		<var name="submenu_html_on" type="select">
            <title xml:lang="ko">서브 메뉴 위젯 설정</title>
            <description xml:lang="ko">서브 메뉴 위젯 사용유무를 선택해 주세요.</description>
			<options value="n">
                <title xml:lang="ko">사용하지 않습니다</title>
                <value>n</value>
            </options>
            <options value="y">
                <title xml:lang="ko">사용합니다.</title>
                <value>y</value>
            </options>
        </var>
		<var name="submenu_html" type="textarea">
			<title xml:lang="ko">서브 메뉴 위젯</title>
			<description xml:lang="ko">서브 메뉴 위젯에 들어갈 코드를 입력하세요.(html지원)</description>
		</var>
        <var name="family_list" type="select">
            <title xml:lang="ko">패밀리 사이트 메뉴 설정</title>
            <description xml:lang="ko">패밀리 사이트 메뉴 사용유무를 선택해 주세요.</description>
            <options value="y">
                <title xml:lang="ko">사용합니다.</title>
                <value>y</value>
            </options>
			<options value="n">
                <title xml:lang="ko">사용하지 않습니다</title>
                <value>n</value>
            </options>
        </var>
		</group>
		<group>
		<title xml:lang="ko">로고 설정</title>
		<var name="header_logo_image" type="image">
			<title xml:lang="ko">헤더 로고 이미지</title>
			<description xml:lang="ko">헤더에 출력될 로고 이미지입니다. 가로 250px, 세로 71px를 권장합니다.</description>
		</var>
		<var name="header_logo_url" type="text">
			<title xml:lang="ko">헤더 로고 주소</title>
			<description xml:lang="ko">이미지 로고를 클릭하면 이동될 주소입니다.</description>
		</var>
        <var name="footer_copy" type="text">
			<title xml:lang="ko">푸터 저작권</title>
			<description xml:lang="ko">하단에 들어갈 홈페이지 저작권을 기입합니다.</description>
		</var>
		</group>
		<group>
        <title xml:lang="ko">배너 설정</title>
		<var name="banner_style" type="select">
            <title xml:lang="ko">베너 출력</title>
            <description xml:lang="ko">베너 출력 여부를 선택하세요.</description>
			<options value="n">
                <title xml:lang="ko">출력하지 않습니다</title>
                <value>n</value>
            </options>
            <options value="y">
                <title xml:lang="ko">출력합니다</title>
                <value>y</value>
            </options>
        </var>
		<var name="banner_image_1" type="image">
			<title xml:lang="ko">베너 이미지 1</title>
			<description xml:lang="ko">베너 1번 슬라이드에 출력될 이미지 입니다. 958*250 크기의 이미지를 권장합니다.</description>
		</var>
		<var name="banner_url_1" type="text">
			<title xml:lang="ko">베너 주소 1</title>
			<description xml:lang="ko">베너 1번 슬라이드를 클릭하면 이동될 주소입니다.</description>
		</var>
		<var name="banner_image_2" type="image">
			<title xml:lang="ko">베너 이미지 2</title>
			<description xml:lang="ko">베너 2번 슬라이드에 출력될 이미지 입니다. 958*250 크기의 이미지를 권장합니다.</description>
		</var>
		<var name="banner_url_2" type="text">
			<title xml:lang="ko">베너 주소 2</title>
			<description xml:lang="ko">베너 2번 슬라이드를 클릭하면 이동될 주소입니다.</description>
		</var>
		<var name="banner_image_3" type="image">
			<title xml:lang="ko">베너 이미지 3</title>
			<description xml:lang="ko">베너 3번 슬라이드에 출력될 이미지 입니다. 958*250 크기의 이미지를 권장합니다.</description>
		</var>
		<var name="banner_url_3" type="text">
			<title xml:lang="ko">베너 주소 3</title>
			<description xml:lang="ko">베너 3번 슬라이드를 클릭하면 이동될 주소입니다.</description>
		</var>
		<var name="banner_image_4" type="image">
			<title xml:lang="ko">베너 이미지 4</title>
			<description xml:lang="ko">베너 4번 슬라이드에 출력될 이미지 입니다. 958*250 크기의 이미지를 권장합니다.</description>
		</var>
		<var name="banner_url_4" type="text">
			<title xml:lang="ko">베너 주소 4</title>
			<description xml:lang="ko">베너 4번 슬라이드를 클릭하면 이동될 주소입니다.</description>
		</var>
		</group>
	</extra_vars>
</layout>